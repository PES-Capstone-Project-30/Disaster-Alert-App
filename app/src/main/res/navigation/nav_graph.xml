<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.jacob.disasteralertapp.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/to_userRegistrationDetailsFragment"
            app:destination="@id/userRegistrationDetailsFragment" />
        <action
            android:id="@+id/to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/to_ngoRegistrationDetailsFragment"
            app:destination="@id/ngoRegistrationDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/userRegistrationDetailsFragment"
        android:name="com.jacob.disasteralertapp.login.UserRegistrationDetailsFragment"
        android:label="fragment_registration_details"
        tools:layout="@layout/fragment_user_registration_details" >
        <action
            android:id="@+id/to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jacob.disasteralertapp.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/ngoRegistrationDetailsFragment"
        android:name="com.jacob.disasteralertapp.login.NgoRegistrationDetailsFragment"
        android:label="fragment_ngo_registration_details"
        tools:layout="@layout/fragment_ngo_registration_details" >
        <action
            android:id="@+id/to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>
